<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText_gps_freq"
        android:layout_marginStart="14dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_width="60dp"
        android:textSize="18sp" />

    <TextView
        android:text="GPS frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp" />

    <Button
        android:text="Cancel"
        android:id="@+id/button_cancel_settings"
        android:layout_height="40dp"
        android:layout_width="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/editText_gps_freq"
        android:layout_alignEnd="@+id/editText_gps_freq"
        style="@style/Widget.AppCompat.Button"
        android:background="@drawable/buttonstyle" />

    <Button
        android:text="Save"
        android:id="@+id/button_save_settings"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/button_cancel_settings"
        android:layout_alignStart="@+id/textView2"
        android:layout_width="80dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        style="@style/Widget.AppCompat.Button"
        android:background="@drawable/buttonstyle" />
</RelativeLayout>